# APPLICATION GEMS
gem 'jbuilder', '~> 2.0'
gem 'haml-rails'
gem 'draper'
gem 'redcarpet'
gem 'websocket-rails'

group :development do
  gem 'capistrano'
  gem 'capistrano-rails'
  gem 'capistrano-bundler'
  gem 'capistrano-rvm'
  gem 'quiet_assets'
end

group :test, :development do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'timecop'
end
